ARG GO_VERSION

FROM golang:${GO_VERSION}-alpine AS souin

RUN apk update && apk upgrade && \
    apk add --no-cache bash git openssh gcc libc-dev
ENV GOPATH /app

RUN mkdir -p /app/src/github.com/HobMartin/souin
WORKDIR /app/src/github.com/HobMartin/souin
ADD ./go.* /app/src/github.com/HobMartin/souin/
RUN go mod download
RUN go get golang.org/x/lint/golint
RUN mkdir -p /ssl
ADD ./context /app/src/github.com/HobMartin/souin/context
ADD ./pkg /app/src/github.com/HobMartin/souin/pkg
ADD ./tests /app/src/github.com/HobMartin/souin/tests
ADD ./configuration /app/src/github.com/HobMartin/souin/configuration
ADD ./configurationtypes /app/src/github.com/HobMartin/souin/configurationtypes
ADD ./errors /app/src/github.com/HobMartin/souin/errors
ADD ./helpers /app/src/github.com/HobMartin/souin/helpers
ADD ./plugins /app/src/github.com/HobMartin/souin/plugins

WORKDIR /app/src/github.com/HobMartin/souin

EXPOSE 80

CMD ["go", "run", "plugins/souin/main.go"]
